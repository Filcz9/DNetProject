@model DNetProject.Models.Pesel

@{
    ViewBag.Title = "VerifyAge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/login.css">

@using (Html.BeginForm("VerifyAge", "Verify", FormMethod.Post, new
{
    enctype =
        "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="loginH2">User</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.PeselNumber, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: black;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PeselNumber, new { htmlAttributes = new { @class = "form-control", @onchange = "OnChangeEvent(event)" } })
                @Html.ValidationMessageFor(model => model.PeselNumber, "", new { @class = "text-danger" })
                @Html.ValidationMessage("Pesel ma 11 liczb", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-2", @style = "color: black;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control", @onchange = "OnChangeEvent(event)" } })
                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                @Html.ValidationMessage("Data jest wymagana", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>



}
<script>
    function OnChangeEvent(event) {
        document.getElementById("label").innerHTML = event.target.value;
    };
</script>