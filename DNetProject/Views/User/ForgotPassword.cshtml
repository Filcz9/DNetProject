@{
    ViewBag.Title = "Forgot Password";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/login.css">
<h1 class="loginH2">Forgot Password</h1>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @if (@ViewBag.Message == "Reset password link has been sent to your email")
        {
            <div class="text-success">
                @ViewBag.Message
            </div>
        }
        else
        {
            <div class="text-danger">
                @ViewBag.Message
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-2" style="color: white;">Email</label>
            @Html.TextBox("Email", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
    <div class="loginInf">
        @Html.ActionLink("Login", "Login", "User")
    </div>
}